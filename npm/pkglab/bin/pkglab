#!/usr/bin/env node

const { execFileSync } = require("child_process");
const os = require("os");

const platform = process.platform;
const arch = os.arch();

const supportedPlatforms = [
  "darwin-arm64",
  "darwin-x64",
  "linux-x64",
  "linux-arm64",
];

const target = `${platform}-${arch}`;

if (!supportedPlatforms.includes(target)) {
  console.error(
    `Unsupported platform: ${target}\nSupported platforms: ${supportedPlatforms.join(", ")}`
  );
  process.exit(1);
}

const pkgName = `pkglab-${target}`;

let binPath;
try {
  binPath = require.resolve(`${pkgName}/bin/pkglab`);
} catch {
  console.error(
    `Could not find ${pkgName}. Make sure it is installed as an optional dependency.`
  );
  process.exit(1);
}

try {
  execFileSync(binPath, process.argv.slice(2), { stdio: "inherit" });
} catch (error) {
  process.exit(error.status ?? 1);
}
