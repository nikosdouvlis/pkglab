#!/usr/bin/env node

const { execFileSync } = require("child_process");
const os = require("os");

const platform = process.platform;
const arch = os.arch();

const supportedPlatforms = [
  "darwin-arm64",
  "darwin-x64",
  "linux-x64",
  "linux-arm64",
];

const target = `${platform}-${arch}`;

if (!supportedPlatforms.includes(target)) {
  console.error(
    `Unsupported platform: ${target}\nSupported platforms: ${supportedPlatforms.join(", ")}`
  );
  process.exit(1);
}

const pkgName = `pkglab-${target}`;
const path = require("path");
const fs = require("fs");

let binPath;
try {
  binPath = require.resolve(`${pkgName}/bin/pkglab`);
} catch {
  // Platform binary not found. This is common with pnpm, which may skip
  // optionalDependencies for workspace devDeps. Fall back to a global
  // pkglab binary in PATH, skipping node_modules/.bin dirs to avoid recursion.
  const dirs = (process.env.PATH || "").split(path.delimiter);
  for (const dir of dirs) {
    if (dir.includes("node_modules")) continue;
    const candidate = path.join(dir, "pkglab");
    try {
      fs.accessSync(candidate, fs.constants.X_OK);
      binPath = candidate;
      break;
    } catch {}
  }

  if (!binPath) {
    console.error(
      `Could not find ${pkgName}. Install pkglab globally (npm i -g pkglab) or ensure the platform binary is available.`
    );
    process.exit(1);
  }
}

try {
  execFileSync(binPath, process.argv.slice(2), { stdio: "inherit" });
} catch (error) {
  process.exit(error.status ?? 1);
}
