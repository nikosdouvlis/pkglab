{
  "name": "pkglab",
  "version": "0.4.0",
  "private": true,
  "type": "module",
  "description": "Local package development CLI with an embedded Verdaccio registry",
  "author": "Nikos Douvlis <nikosdouvlis@gmail.com>",
  "license": "MIT",
  "files": [
    "src"
  ],
  "keywords": [
    "verdaccio",
    "local",
    "registry",
    "monorepo",
    "workspace",
    "publish"
  ],
  "scripts": {
    "build:npm": "scripts/build-npm.sh",
    "publish:npm": "scripts/publish-npm.sh",
    "test:e2e": "bun run test/e2e.ts",
    "version": "changeset version && bun run scripts/sync-versions.ts",
    "release": "bun run scripts/ci-release.ts"
  },
  "bin": {
    "pkglab": "./src/index.ts",
    "pkgl": "./src/index.ts"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "@manypkg/get-packages": "^2.2",
    "citty": "^0.1",
    "dependency-graph": "^1.0",
    "libnpmpublish": "^10",
    "verdaccio": "^6",
    "yaml": "^2.7"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/bun": "latest",
    "typescript": "^5.7"
  }
}
